{
  "name": "www.sokontokoro-factory.net",
  "version": "1.14.0",
  "description": "sokontokoro factory web site",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "github"
  },
  "author": "Tatuya Yamamoto",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run build:pug -- -w & webpack-dev-server -w",
    "clean": "rm -rf dist",
    "deploy": "    yarn build     && gsutil -m rsync -d -r dist/ gs://www-dev.sokontokoro-factory.net/",
    "deploy:pro": "yarn build:pro && gsutil -m rsync -d -r dist/ gs://www.sokontokoro-factory.net/",
    "build": "yarn clean && yarn build:pug && yarn build:js && npm run copy-assets && npm run imagemin",
    "build:pro": "NODE_ENV=production npm run build",
    "build:pug": "pug src/ --out dist --obj package.json",
    "build:js": "webpack",
    "copy-assets": "cpx \"src/assets/**/*\" dist/assets",
    "imagemin": "imagemin dist/assets/image/* --out-dir=dist/assets/image",
    "format": "prettier 'src/**/*.{js,scss}' --write"
  },
  "sass": {
    "includePaths": [
      "./node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "material-components-web": "^0.34.1",
    "reset-css": "^3.0.0"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "husky": "^1.3.1",
    "imagemin-cli": "^3.0.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4",
    "pug": "^2.0.3",
    "sass": "^1.17.3"
  }
}
