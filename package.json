{
  "name": "www.sokontokoro-factory.net",
  "version": "1.18.0",
  "description": "sokontokoro factory web site",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "github"
  },
  "author": "Tatuya Yamamoto",
  "license": "MIT",
  "scripts": {
    "start": "parcel serve src/{index,landing,404}.pug",
    "clean": "rm -rf dist",
    "deploy": "    yarn clean && yarn build     && yarn imagemin && gsutil -m rsync -d -r dist/ gs://www-dev.sokontokoro-factory.net/",
    "deploy:pro": "yarn clean && yarn build:pro && yarn imagemin && gsutil -m rsync -d -r dist/ gs://www.sokontokoro-factory.net/",
    "build": "    NODE_ENV=development yarn parcel build src/{index,landing,404}.pug",
    "build:pro": "NODE_ENV=production  yarn parcel build src/{index,landing,404}.pug",
    "imagemin": "imagemin dist/assets/image/* --out-dir=dist/assets/image",
    "format": "prettier 'src/**/*.{js,scss}' --write"
  },
  "sass": {
    "includePaths": [
      "./node_modules"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "material-components-web": "^0.34.1",
    "reset-css": "^3.0.0",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "autoprefixer": "^9.7.1",
    "cpx": "^1.5.0",
    "husky": "^1.3.1",
    "imagemin-cli": "^3.0.0",
    "jstransformer-markdown-it": "^2.1.0",
    "lint-staged": "^8.1.5",
    "marked": "^0.6.2",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.12.3",
    "postcss-modules": "^1.4.1",
    "prettier": "^1.16.4",
    "pug": "^2.0.3"
  }
}
