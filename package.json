{
  "name": "www.sokontokoro-factory.net",
  "version": "1.2.0",
  "description": "sokontokoro factory web site",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && run-p server watch",
    "clean": "rm -rf dist",
    "version": "NODE_ENV=production npm run build && rm -r docs/* && cp -r dist/* docs/ && git add docs",
    "build": "npm run clean && run-p build:* && npm run copy-assets && npm run imagemin",
    "build:pug": "pug src/pug -o dist",
    "build:js": "rollup -c",
    "build:sass": "node-sass src/sass/ -o dist/css/ --include-path node_modules --importer=node_modules/node-sass-tilde-importer",
    "copy-assets": "cpx \"src/assets/**/*\" dist/assets",
    "imagemin": "imagemin dist/assets/image/* --out-dir=dist/assets/image",
    "watch": "run-p watch:*",
    "watch:pug": "npm run build:pug  -- -w",
    "watch:js": "npm run build:js -- -w",
    "watch:sass": "npm run build:sass -- --watch",
    "server": "live-server dist"
  },
  "repository": {
    "type": "git",
    "url": "github"
  },
  "author": "Tatuya Yamamoto",
  "license": "MIT",
  "dependencies": {
    "materialize-css": "next",
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "imagemin-cli": "^3.0.0",
    "live-server": "^1.2.0",
    "node-sass": "^4.7.2",
    "node-sass-tilde-importer": "^1.0.0",
    "npm-run-all": "^4.1.2",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rollup": "^0.52.1",
    "rollup-plugin-node-resolve": "^3.0.0"
  }
}
