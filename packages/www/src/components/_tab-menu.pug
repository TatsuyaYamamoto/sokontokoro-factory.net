div#my-mdc-tab-bar-scroller.mdc-tab-bar-scroller
  div.mdc-tab-bar-scroller__indicator.mdc-tab-bar-scroller__indicator--back
    a.mdc-tab-bar-scroller__indicator__inner(href="#")
      i.material-icons navigate_before

  div.mdc-tab-bar-scroller__scroll-frame
    nav.mdc-tab-bar.mdc-tab-bar-scroller__scroll-frame__tabs.mdc-tab-bar--icons-with-text

      a.mdc-tab.mdc-tab--with-icon-and-text(
        href=`${BASE_PATH}`,
        class={"mdc-tab--active": pageName === "index"}
      )
        i.material-icons.mdc-tab__icon home
        span.mdc-tab__icon-text #{tabs_home}

      // TODO fix path
      a.mdc-tab.mdc-tab--with-icon-and-text(
        href=`${BASE_PATH}activity.pug`,
        class={"mdc-tab--active": pageName === "activity"}
      )
        i.material-icons.mdc-tab__icon timeline
        span.mdc-tab__icon-text #{tabs_activity}

      // TODO fix path
      a.mdc-tab.mdc-tab--with-icon-and-text(
        href=`${BASE_PATH}game.pug`,
        class={"mdc-tab--active": pageName === "game"}
      )
        i.material-icons.mdc-tab__icon gamepad
        span.mdc-tab__icon-text #{tabs_game}

      // TODO fix path
      a.mdc-tab.mdc-tab--with-icon-and-text(
        href=`${BASE_PATH}music.pug`,
        class={"mdc-tab--active": pageName === "music"}
      )
        i.material-icons.mdc-tab__icon music_note
        span.mdc-tab__icon-text #{tabs_music}

      a.mdc-tab.mdc-tab--with-icon-and-text(
        href=`${BASE_PATH}communication.pug`,
        class={"mdc-tab--active": pageName === "communication"}
      )
        i.material-icons.mdc-tab__icon people
        span.mdc-tab__icon-text #{tabs_communication}

      a.mdc-tab.mdc-tab--with-icon-and-text(
        href=`${contact_url}`
      )
        i.fa.fa-envelope.sf-footer__connect-icon
        span.mdc-tab__icon-text #{tabs_contact}

      span.mdc-tab-bar__indicator

  div.mdc-tab-bar-scroller__indicator.mdc-tab-bar-scroller__indicator--forward
    a.mdc-tab-bar-scroller__indicator__inner(href="#")
      i.material-icons navigate_next
