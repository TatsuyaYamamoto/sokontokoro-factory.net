include _string

block vars
  - var lang = "ja"
  - var pageName = "activity"

doctype html
html(lang=`${lang}`)
  head
    include components/_head

    script(async src="https://platform.twitter.com/widgets.js" charset="utf-8")
    script(src="https://cdn.jsdelivr.net/npm/lozad/dist/lozad.min.js")


    block dependency
      link(rel="stylesheet" href=`./assets/css/activity.scss`)
      script(src=`./assets/js/activity.js`)

  body

    header
      include components/_toolbar

    main
      include components/_activity-list

    footer
      include components/_footer

    script
      | lozad('.lozad', {
      |   load: function(el) {
      |     el.firstElementChild.className = "twitter-tweet"
      |     twttr.widgets.load(el);
      |   }
      | }).observe();;
